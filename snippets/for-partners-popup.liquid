<div
  class="fixed inset-0 z-50 bg-black bg-opacity-50 flex items-center justify-center"
  x-data="{ openPartnersPopup: false }"
  x-show="openPartnersPopup"
  @toggle-for-partners-popup.window="openPartnersPopup = !openPartnersPopup"
>
  <div
    class="bg-white p-4 sm:p-7 md:p-10 mx-3 w-full max-w-[760px] max-h-screen overflow-y-auto"
    @click.away="openPartnersPopup = false"
    @keydown.escape.window="openPartnersPopup = false"
  >
    <header class="flex items-center justify-between gap-2">
      <h2 class="font-bold text-base md:text-2xl ">Want to become a partner? Let's get linked up!</h2>
      <button @click="openPartnersPopup = false">
        <svg width="31" height="31" viewBox="0 0 31 31" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M20.6667 7.75L15.5001 14.6389L20.6667 21.5278" stroke="#111924" stroke-width="2" />
          <path d="M10.3333 21.5278L15.4999 14.6389L10.3333 7.75005" stroke="#111924" stroke-width="2" />
        </svg>
      </button>
    </header>
    <form>
      <div class="grid grid-cols-1 gap-4 mt-4">
        <div class="flex flex-col">
          <label for="name" class="text-gray-500">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="border border-gray-300 p-2 focus:outline-none focus:border-primary h-[50px]"
          >
        </div>
        <div class="flex flex-col">
          <label for="phone" class="text-gray-500">Phone number</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="border border-gray-300 p-2 focus:outline-none focus:border-primary h-[50px]"
          >
        </div>
        <div class="flex flex-col">
          <label for="email" class="text-gray-500">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="border border-gray-300 p-2 focus:outline-none focus:border-primary h-[50px]"
          >
        </div>

        <div class="flex flex-col">
          <label for="message" class="text-gray-500">Text field</label>
          <textarea
            id="message"
            name="message"
            class="border border-gray-300 p-2 focus:outline-none focus:border-primary resize-none h-[100px]"
          ></textarea>
        </div>

        <div class="flex items-center justify-between gap-3 mt-5">
          <button
            class="text-primary uppercase font-bold  w-full border border-gray-300 h-[50px]"
            @click="openPartnersPopup = false"
          >
            cancel
          </button>
          <button
            type="submit"
            class="bg-primary uppercase font-bold py-2 px-4 w-full h-[50px] bg-black text-white"
          >
            send
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
