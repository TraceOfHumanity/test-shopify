<header
  class="header z-50 {%if section.settings.sticky_header_type == 'fixed'%}fixed top-0 left-0 w-full{% else %} relative {% endif %} {% if section.settings.show_line_separator == true %} border-b border-gray-400 {% endif %} "
  style="background-color: {{ section.settings.background_color }}; "
>
  <div class="container gap-x-8 items-center">
    <div class="header__logo">
      {% if section.settings.logo %}
        <a href="/" class="block" style="max-width: {{ section.settings.logo_width }}px;">
          <img
            src="{{ section.settings.logo | img_url: 'master' }}"
            alt="{{ shop.name }}"
            width="auto"
            height="auto"
          >
        </a>
      {% else %}
        <a href="/">
          {{ shop.name }}
        </a>
      {% endif %}
    </div>
    <nav class="header__menu flex gap-x-8" x-data>
      <button
        class="md:hidden "
        type="button"
        @click="$dispatch('toggle-menu')"
        style="padding-top: {{ section.settings.padding_y }}vh; padding-bottom: {{ section.settings.padding_y }}vh;"
      >
        {% render 'icon-menu', class: 'w-10' %}
      </button>
      <ul class="header__menu-nav hidden md:flex gap-x-8 md:ml-auto">
        {% for link in section.settings.menu.links %}
          {% if link.links != blank %}
            <li class="nav__item block relative">
              <a href="{{ link.url }}">{{ link.title }}</a>
              <ul class="nav__item-submenu absolute bg-white border px-3 min-w-[160px] top-16 left-1/2 transform -translate-x-1/2">
                {% for sublink in linklists[link.handle].links %}
                  <li>
                    <a
                      href="{{sublink.url}}"
                      style="padding-top: {{ section.settings.padding_y }}vh; padding-bottom: {{ section.settings.padding_y }}vh;"
                    >
                      {{ sublink.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% else %}
            <li>
              <a
                class="nav__item px-4 block "
                href="{{ link.url }}"
                style="padding-top: {{ section.settings.padding_y }}vh; padding-bottom: {{ section.settings.padding_y }}vh;"
              >
                {{- link.title -}}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <button
        class="hidden md:block px-4"
        style="padding-top: {{ section.settings.padding_y }}vh; padding-bottom: {{ section.settings.padding_y }}vh;"
        @click="$dispatch('toggle-for-partners-popup')"
      >
        for Partners
      </button>
    </nav>
    <div class="header__icons h-full items-center flex justify-end">
      <button
        type="button"
        title="Cart button"
        class="header__icon flex justify-center  bg-gray-100 h-full items-center px-6"
        style="padding-top: {{ section.settings.padding_y }}vh; padding-bottom: {{ section.settings.padding_y }}vh;"
      >
        {% render 'icon-cart', class: 'w-10 h-10' %}
        <span class="sr-only">{{ 'templates.cart.cart' | t }} </span>
      </button>
    </div>
  </div>

  {% render 'mobile-menu' %}
  {% render 'for-partners-popup' %}
</header>

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if settings.logo %}
      "logo": {{ settings.logo | image_url: width: 500 | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tiktok_link | json }},
      {{ settings.social_tumblr_link | json }},
      {{ settings.social_snapchat_link | json }},
      {{ settings.social_youtube_link | json }},
      {{ settings.social_vimeo_link | json }}
    ],
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
  {% assign potential_action_target = request.origin | append: routes.search_url | append: '?q={search_term_string}' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ request.origin | append: page.url | json }}
    }
  </script>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "max_blocks": 3,
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo.label"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 100,
      "max": 250,
      "step": 5,
      "label": "logo width",
      "default": 200
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Header background color",
      "default": "#ffffff"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "select",
      "id": "sticky_header_type",
      "options": [
        {
          "value": "static",
          "label": "static"
        },
        {
          "value": "fixed",
          "label": "fixed"
        }
      ],
      "default": "static",
      "label": "Header type"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": false,
      "label": "t:sections.header.settings.show_line_separator.label"
    },
    {
      "type": "range",
      "id": "padding_y",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "unit": "vh",
      "label": "Header height",
      "default": 1
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ]
}
{% endschema %}
