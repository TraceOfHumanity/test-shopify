<header class="header">
  <div class="header-container">
    <div class="logo-container">
      <img src="{{ section.settings.header_logo | img_url: '200x20' }}">
      <p>
        {{ section.settings.header_company_name }}
      </p>
    </div>
    <div class="col-md-6">
      <h1>{{ section.settings.header_text }}</h1>
      <p>{{ section.settings.header_subtext }}</p>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "custom-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_logo",
      "label": "Header Logo"
    },
    {
      "type": "text",
      "id": "header_company_name",
      "label": "Company Name"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text"
    },
    {
      "type": "text",
      "id": "header_subtext",
      "label": "Header Subtext"
    }
  ],
  "presets": [
    {
      "name": "custom-header",
      "category": "Header"
    }
  ]
}
{% endschema %}
