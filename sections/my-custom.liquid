{% comment %}
  <div style="background-color:  {{ section.settings.bg_color }};">
    <h1 style="color: {{ section.settings.text_color }};">My custom section</h1>
  </div>
{% endcomment %}

{% for block in section.blocks %}
  <div>
    <p>
      {{ block.settings.content }}
    </p>
  </div>
{% endfor %}

{% schema %}
{
  "name": "My custom section",
  "max_blocks": 10,
  "settings": [],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement component",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background color"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "My custom block",
      "category": "announcement"
    }
  ]
}
{% endschema %}
